#!/bin/sh

set -e

IMAGE_NAME=mender-convert

MENDER_CONVERT_DIR="$(pwd)"
mkdir -p output

docker run \
       -v $MENDER_CONVERT_DIR/input:/mender-convert/input \
       -v $MENDER_CONVERT_DIR/output:/mender-convert/output \
       --privileged=true \
       --cap-add=SYS_MODULE \
       -v /dev:/dev \
       -v /lib/modules:/lib/modules:ro \
       $IMAGE_NAME "$@"
